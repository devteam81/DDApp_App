<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:background="@drawable/bg_background_popup">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:src="@drawable/bg_green_reverse" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="-40dp"
        android:layout_alignTop="@+id/img"
        android:src="@drawable/bg_gray_square" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_25"
        android:src="@drawable/bg_pink_triangle"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/ll_logout"/>

    <LinearLayout
        android:id="@+id/ll_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Update Bebu?"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:padding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bebu recommends that you update to latest version."
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_5"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center">

            <TextView
                android:id="@+id/btnNotNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/later"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/buttonColor"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"/>

            <TextView
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>