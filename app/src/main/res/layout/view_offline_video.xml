<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offlineVideoItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/colorPrimary">

    <TextView
        android:id="@+id/line_view"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:layout_marginEnd="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/rl_video_details"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:id="@+id/rl_video_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_70"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/cvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"
                    android:src="@drawable/bebu_placeholder_horizontal"
                    app:strokeColor="@null"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.SelectedCornerRadius" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_white"
                    android:visibility="gone"/>
            </RelativeLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/cvContent"
            android:layout_toEndOf="@+id/cvContent"
            android:layout_marginStart="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/sign_in"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ep_title"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/sign_in"
                    android:layout_below="@+id/title"
                    android:visibility="visible"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@android:color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="18+"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>-->

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/genre"
                android:textSize="@dimen/sp_12"
                android:textColor="@android:color/white"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/sign_in"
                android:layout_marginTop="@dimen/dp_5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@android:color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="18+" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@android:color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="|"
                    />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_rating"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:text="@string/sign_in"/>

                <ImageView
                    android:id="@+id/imgRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:scaleType="fitXY"
                    android:src="@drawable/a"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/rl_video_details"
        android:layout_alignBottom="@id/rl_video_details"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/downloadVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_download"
            android:tint="@color/blue_icon_color"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/deleteVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            android:layout_centerInParent="true"
            app:tint="@color/blue_icon_color" />

        <LinearLayout
            android:id="@+id/ll_downloadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/downloadingView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="downloading.json"
                    app:lottie_loop="true"
                    app:tint="@color/blue_icon_color"
                    android:backgroundTint="@color/blue_icon_color"
                    android:visibility="visible"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/downloadingView_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pauseDownloadingView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ic_baseline_pause_24"
                    android:visibility="visible"
                    app:tint="@color/blue_icon_color" />

                <ImageView
                    android:id="@+id/cancelDownloadingView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="2dp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ic_baseline_cancel_24"
                    android:visibility="visible"
                    app:tint="@color/blue_icon_color" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <!--<ImageView
        android:id="@+id/deleteVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_delete" />-->


</RelativeLayout>