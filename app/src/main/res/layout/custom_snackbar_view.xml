<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_download_validity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_button"
    android:backgroundTint="@color/report_background">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_started"
        android:padding="@dimen/dp_16"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <!--<View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_alignBottom="@+id/txt"
        android:layout_toStartOf="@+id/btn_downloaded"/>-->

    <TextView
        android:id="@+id/btn_downloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gradient_color_top_bottom"
        android:text="@string/download_open"
        android:textSize="@dimen/sp_16"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:padding="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>

